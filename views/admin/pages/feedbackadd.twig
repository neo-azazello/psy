{% extends 'admin/main.twig' %}
{% block admincontent %} 

<div class="row">
    <div class="col-md-12">
        <div class="overview-wrap">
            <h2 class="title-1">Новый отзыв</h2>
            <a href="{{path_for('admin.feedback')}}">Назад к списку →</a>
        </div>
    </div>
</div>

<div class="row m-t-10">
    <div class="col-md-12">
        {% include 'include/flash.twig' %} 
    </div>
</div>

<div class="row m-t-10">
<div class="col-lg-12">
        <div class="card">
        
        <form action="{{path_for('admin.addfeedback')}}" method="post">
            
            <div class="card-header">
                Форма <strong>добавления</strong>
            </div>

            <div class="card-body card-block">


                <div class="form-group">
                    <label for="company" class=" form-control-label">Текст отзыва</label>
                    <textarea rows="4"
                                class="form-control" 
                                name="feedbacktext"
                                required></textarea>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group ">
                            <label for="company" class=" form-control-label">Автор</label>
                            <input type="text" 
                                placeholder="Введите название" 
                                class="form-control"
                                name="feedbackauthor"
                                required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="company" class=" form-control-label">Описание (не обязательно)</label>
                            <input type="text" 
                                placeholder="Введите длительность в секундах" 
                                class="form-control" 
                                name="authortitle">
                        </div>
                    </div>
                </div>
                

            </div>
            
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Сохранить
                </button>
            </div>
        </form>
     </div>
</div>
 </div>
{% endblock %}