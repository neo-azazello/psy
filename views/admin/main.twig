{% include 'admin/inc/header.twig' %}
    <div class="page-wrapper">
        {% include 'admin/inc/navigation.twig' %}    
        {% include 'admin/inc/sidebar.twig' %}

        <div class="page-container">
 
            <header class="header-desktop">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="header-wrap">

                            <div class="header-button">

                                <div class="account-wrap">
                                    <div class="account-item clearfix js-item-menu">
                                        <div class="content">
                                            <a class="js-acc-btn" href="#">{{auth.user.userfullname}}</a>
                                        </div>
                                        <div class="account-dropdown js-dropdown">
                                            <div class="account-dropdown__body">
                                                <div class="account-dropdown__item">
                                                    <a href="#">
                                                        <i class="zmdi zmdi-account"></i>Поменять пароль</a>
                                                </div>
                                            </div>
                                            <div class="account-dropdown__footer">
                                                <a href="{{path_for('auth.signout')}}">
                                                    <i class="zmdi zmdi-power"></i>Выйти из системы</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>


            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">

                        {% block admincontent %} {% endblock %}

                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    <p>Copyright © {{ "now"|date("Y") }} {{'Təranə Arif'}}</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="modalEdit"></div>
            
            {# delete Modal #}
            <div class="modal fade" id="confirm-delete" tabindex="-1" style="z-index:9999;"role="dialog" data-keyboard="false"  data-backdrop="static" aria-hidden="true">
                <div class="modal-dialog modal-md" role="document">
                    <div class="modal-content">
                    
                        <div class="modal-header">
                            <h5 class="modal-title" id="showIconLabel">Удалить картинку</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    
                        <div class="modal-body">
                            <p>Вы уверены что хотите удалить картинку?</p>
                        </div>
                        
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Отменить</button>
                            <a class="btn btn-danger btn-ok" style="color:#fff;">Да, удалить!</a>
                        </div>
                    </div>
                </div>
            </div>

             {% if is_current_path('admin.media') %}
                {% for m in media %}
                    <div class="modal fade" id="{{m.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-body mb-0 p-0">
                                    <div class="embed-responsive embed-responsive-16by9 z-depth-1-half">
                                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{m.videoid}}"
                                        allowfullscreen></iframe>
                                    </div>
                                </div>
                                <div class="modal-footer justify-content-center">
                                    <button type="button" class="btn btn-outline-primary btn-rounded btn-md ml-4" data-dismiss="modal">{{lang.close}}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}

        </div>

    </div>
{% include 'admin/inc/footer.twig' %}
