{% extends 'main.twig' %}

{% block page %}
<div class="col-xs-12  col-md-9 col-md-push-3" role="main">
    <div class="content-container">
        
        <div class="main-title">
            <h1 class="main-title__primary">{{lang.contact_page_title}}</h1>
        </div>

        <article>

        <div class="panel-grid row m-b-0">
            <div class="col-md-4 panel-grid-cell">
                <div class="textwidget">
                    {{contacts.work_address|raw|nl2br}}
                    <br><a href="mailto:help@psycholog.az">help@psycholog.az</a>
                </div>
            </div>

            <div class="col-md-8 panel-grid-cell"> 
                <div class="textwidget">
                    {% include 'include/flash.twig' %} 
                <br>
                    <div role="form" lang="en-US" dir="ltr"> 
                     
                        <form action="" method="post">
                            <div class="row">
                                
                                <div class="col-xs-12  col-sm-6">
                                    <div class="c-form-group">
                                        <input type="text" name="name" id="name" size="40" class="form-text" required="required" placeholder="{{lang.form_your_name}}">
                                    </div>
                                    
                                    <div class="c-form-group">
                                        <input type="email" name="email" id="email" size="40" class="form-text form-email" required="required" placeholder="{{lang.form_your_email}}">
                                    </div>
                                    
                                    <div class="c-form-group">
                                        <input type="text" name="subject" id="subject" size="40" class="form-text" placeholder="{{lang.form_subject}}">
                                    </div>
                                </div>
                                
                                <div class="col-xs-12  col-sm-6">
                                    
                                    <div class="c-form-group">
                                        <textarea name="comments" id="comments" cols="40" rows="10" class="form-textarea" placeholder="{{lang.form_text}}"></textarea>
                                    </div>
                                    
                                        <div class="form-group">
                                            
                                        </div>
                                    
                                    <button id="simpleContactSubmitButton" type="submit" class="form-submit btn btn-primary">{{lang.form_send}}</button>

                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        </article>
    
    </div>
</div>

{#THE BLOCK OF SIDEBAR#}
<div class="col-xs-12  col-md-3  col-md-pull-9">
     <div class="sidebar">
         {% include 'sidebars/aboutme.twig' %}
     </div>
</div>
{% endblock %}