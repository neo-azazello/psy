{% extends 'admin/main.twig' %}
{% block admincontent %} 

<div class="row">
    <div class="col-md-12">
        <div class="overview-wrap">
            <h2 class="title-1">Видеофайлы </h2>
            <a href="{{path_for('admin.addmedia')}}">
                <button class="btn btn-success item">
                    <i class="zmdi zmdi-plus-circle"></i> Добавить
                </button>
            </a>
        </div>
    </div>
</div>

<div class="row m-t-10">
    <div class="col-md-12">
        {% include 'include/flash.twig' %} 
    </div>
</div>

<div class="row m-t-10">
    
    <div class="col-lg-12">

        <div class="table-responsive table--no-card m-b-40">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Название</th>
                        <th>Длительность</th>
                        <th>Код</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                {% for m in media %}
                <tr >
                    <td >{{m.id}}</td>
                    <td data-toggle="modal" data-target="#{{m.id}}">{{m.videoname}}</td>
                    <td class="text-center">{{m.duration}}</td>
                    <td>{{m.videoid}}</td>
                    <td>
                    <div class="table-data-feature">
                        <a href="{{base_url()}}/admin/media/edit/{{m.id}}">
                            <button class="item">
                                <i class="zmdi zmdi-edit"></i>
                            </button>
                        </a>

                        <a href="#" data-href="{{base_url()}}/admin/media/delete/{{m.id}}" data-toggle="modal" data-target="#confirm-delete" class="delete-button">
                            <button class="item">
                                <i class="zmdi zmdi-delete"></i>
                            </button>
                        </a>
                    </div>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}